{
    "name": "finnainvoices",
    "version": "0.1.0",
    "description": "Boilerplate WordPress plugin with Tailwind CSS.",
    "author": "Finna Create",
    "repository": {
        "type": "git",
        "url": "https://github.com/FinnaCreate/finna-invoices"
    },
    "author_uri": "https://finnacreate.com",
    "text_domain": "finnainvoices",
    "license": "MIT",
    "scripts": {
        "production:css-app": "tailwindcss -i ./src/css/app.css -o ./build/css/app.css --postcss --minify",
        "production:js": "./node_modules/.bin/esbuild ./src/ts/app.ts --bundle --outfile=./build/js/app.js --minify",
        "dev:css-app": "tailwindcss -i ./src/css/app.css -o ./build/css/app.css --postcss",
        "dev:js": "./node_modules/.bin/esbuild ./src/ts/app.ts --bundle --outfile=./build/js/app.js",
        "watch:css-app": "tailwindcss -i ./src/css/app.css -o ./build/css/app.css --postcss --watch",
        "watch:js": "./node_modules/.bin/esbuild ./src/ts/app.ts --bundle --outfile=./build/js/app.js --watch",
        "production": "cross-env NODE_ENV=production concurrently \"npm run production:css-app\" \"npm run production:js\"",
        "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:css-app\" \"npm run dev:js\"",
        "watch": "cross-env NODE_ENV=development concurrently \"npm run watch:css-app\" \"npm run watch:js\"",
        "browser-sync": "cross-env NODE_ENV=development browser-sync start --config ./bs-config.js --no-inject-changes",
        "watch-sync": "concurrently \"npm run browser-sync\" \"npm run watch\""
    },
    "devDependencies": {
        "@typescript-eslint/parser": "^5.10.2",
        "@wordpress/eslint-plugin": "^10.0.0",
        "@wordpress/prettier-config": "^1.1.1",
        "autoprefixer": "^10.4.0",
        "browser-sync": "^2.26.14",
        "concurrently": "^6.2.1",
        "cross-env": "^6.0.3",
        "esbuild": "^0.12.24",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "postcss": "^8.4.4",
        "postcss-import": "^14.0.0",
        "postcss-nested": "^5.0.3",
        "postcss-nested-ancestors": "^2.0.0",
        "resolve-url-loader": "^3.1.2",
        "tailwindcss": "^3.0.0",
        "typescript": "^4.5.5"
    }
}
